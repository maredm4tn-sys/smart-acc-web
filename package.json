{
  "name": "smart-acc-web",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "author": "Mared",
  "description": "Smart Accountant Offline Version",
  "scripts": {
    "dev": "next dev -p 3002 --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "electron-dev": "concurrently \"cross-env BROWSER=none NEXT_PUBLIC_APP_MODE=desktop npm run dev\" \"wait-on http://localhost:3002 && electron .\"",
    "electron-build": "cross-env NEXT_PUBLIC_APP_MODE=desktop next build --webpack && node scripts/fix-nested-build.js && node scripts/secure-build.js",
    "dist": "electron-builder --win --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.smartacc.offline",
    "productName": "Smart Accountant",
    "icon": "build/icon.ico",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ],
    "files": [
      "electron/**/*",
      "drizzle/**/*",
      "package.json",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app-server"
      },
      {
        "from": ".next/static",
        "to": "app-server/.next/static"
      },
      {
        "from": "public",
        "to": "app-server/public"
      },
      {
        "from": "drizzle",
        "to": "app-server/drizzle"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": "dir",
      "icon": "build/icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/node-os-utils": "^1.3.4",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "better-sqlite3-multiple-ciphers": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "javascript-obfuscator": "^5.1.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "node-os-utils": "^2.0.1",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.69.0",
    "react-to-print": "^3.2.0",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "30.1.0",
    "electron-builder": "24.13.3",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "wait-on": "^9.0.3"
  }
}
