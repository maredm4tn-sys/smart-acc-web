{
  "name": "smart-acc-web",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "author": "Mared",
  "description": "Smart Accountant Offline Version",
  "scripts": {
    "dev": "next dev -p 3002 --turbo --turbo-log-level=silent",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "electron-dev": "concurrently \"cross-env BROWSER=none NEXT_PUBLIC_APP_MODE=desktop npm run dev\" \"wait-on http://localhost:3002 && electron .\"",
    "electron-build": "cross-env NEXT_PUBLIC_APP_MODE=desktop next build --webpack && node scripts/fix-nested-build.js",
    "dist": "node scripts/build-dist.js",
    "db:generate:sqlite": "drizzle-kit generate --config=drizzle.config.ts",
    "db:generate:pg": "drizzle-kit generate --config=drizzle.config.pg.ts"
  },
  "build": {
    "appId": "com.smartacc.offline",
    "productName": "Smart Accountant",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ],
    "files": [
      "electron/**/*",
      "drizzle/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app-server",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/static",
        "to": "app-server/.next/static"
      },
      {
        "from": "public",
        "to": "app-server/public"
      },
      {
        "from": "drizzle",
        "to": "app-server/drizzle"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "dir",
        "zip"
      ],
      "icon": "build/icon.png",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    }
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.69.0",
    "react-to-print": "^3.2.0",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "30.1.0",
    "electron-builder": "24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "nodemailer": "^7.0.12",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}